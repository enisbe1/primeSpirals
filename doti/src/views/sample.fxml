<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" maxHeight="600.0" maxWidth="600.0" minHeight="500.0" minWidth="500.0" prefHeight="500.0" prefWidth="500.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.Controller">
    <children>
        <Pane prefHeight="400.0" prefWidth="400.0">
            <children>
                <VBox alignment="CENTER" prefHeight="400.0" prefWidth="400.0">
                    <children>
                        <TextField fx:id="inputi" promptText="Write the number " style="-fx-border-radius: 10%;" styleClass="texti">
                            <VBox.margin>
                                <Insets bottom="20.0" left="90.0" right="90.0" />
                            </VBox.margin>
                        </TextField>
                        <Button id="button" fx:id="submiti" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#getNumber" text="SUBMIT" textOverrun="WORD_ELLIPSIS">
                            <font>
                                <Font name="Times New Roman" size="23.0" />
                            </font>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </Button>
                    </children>
                </VBox>
            </children>
        </Pane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
